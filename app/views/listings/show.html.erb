<div class="container listing-show">

  <%= cl_image_tag @listing.photo.key %>

  <div class="listing-info">

    <div class="key-info">
      <h4><%= @listing.title %></h4>
      <h5>Â£<%= @listing.price.round() %></h5>
      <h5>Available in: <%= @listing.size %></h5>

      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'listing_id', @listing.id %>
        <%= submit_tag 'Buy Now', class: 'button' %>
      <% end %>

      <p><%= @listing.description %></p>
    </div>

    <div class="seller-details">
      <h5>Sold by <%= @listing.seller.shop_name %></h5>
      <div class="sustainability">
        <p>Sustainability practices:</p>
        <ul>
          <li><i class="fas fa-leaf"></i> Placeholder...</li>
          <li><i class="fas fa-leaf"></i> Placeholder...</li>
          <li><i class="fas fa-leaf"></i> Placeholder...</li>
          <li><i class="fas fa-leaf"></i> Placeholder...</li>
        </ul>
      </div>

      <%= link_to seller_path(@listing.seller) do %>
        <p>See more from  <%= @listing.seller.shop_name %></p>
      <% end %>
    </div>

  </div>

</div>
