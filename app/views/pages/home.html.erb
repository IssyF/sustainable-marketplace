<div class="container homepage">

    <div class="new-in-cards">
      <div class="homepage-story" id="new-in">
        <%= link_to new_in_listings_path do %>
          <h2>New in</h2>
          <p>Browse the latest drops from our sustainable sellers</p>
        <% end %>
      </div>

      <%= link_to accessories_listings_path, class:"homepage-video" do %>
        <%= video_tag "hat_video.mp4", autoplay: true, loop: true, muted: true, controls: false, playsinline: true %>
        <div class="overlay-text">
          <h3>Jump for joy, Spring accessories are here!</h3>
        </div>
      <% end %>
    </div>

    <div class="homepage-story" id="activewear">
      <%= link_to activewear_listings_path do %>
        <h2>Focus On: Activewear</h2>
        <p>Work out in style</p>
      <% end %>
    </div>

  <div class="homepage-carousels">

    <h2>What's Popular</h2>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">

        <div class="carousel-item active">
          <img class="d-block w-100" src="https://images.unsplash.com/flagged/photo-1554033750-2137b5cfd7ce?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1978&q=80" alt="Coats and jackets">
          <%= link_to jackets_listings_path do %>
            <div class="carousel-caption">
              <h3>Coats and Jackets</h3>
            </div>
          <% end %>
        </div>

        <div class="carousel-item">
          <img class="w-100" src="https://images.unsplash.com/photo-1516810773736-19a71ee11dab?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1887&q=80" alt="Knitwear">
          <%= link_to denim_listings_path do %>
            <div class="carousel-caption">
              <h3>Classic Denim</h3>
            </div>
          <% end %>
        </div>

        <div class="carousel-item">
          <img class="w-100" src="https://images.unsplash.com/photo-1532675432006-329c6fed7045?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1854&q=80" alt="Midi dress">
          <%= link_to day_dresses_listings_path do %>
            <div class="carousel-caption">
              <h3>Day Dresses</h3>
            </div>
          <% end %>
        </div>

      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <h2>Featured Sellers</h2>

    <div id="carouselExampleControls2" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">

        <div class="carousel-item active">
          <%= image_tag "bamboo.png", class:"d-block w-100", alt:"Back view of lady wearing yoga bra and leggings, stretching to the side" %>
          <%= link_to bam_sellers_path do %>
            <div class="carousel-caption">
              <h3>BAM</h3>
              <p>Natural activewear</p>
            </div>
          <% end %>
        </div>

        <div class="carousel-item">
          <%= image_tag "before_july.png", class:"d-block w-100", alt:"Green puff sleeve crop top with cow print high waisted jeans" %>
          <%= link_to before_july_sellers_path do %>
            <div class="carousel-caption">
              <h3>Before July</h3>
              <p>Timeless statement pieces</p>
            </div>
          <% end %>
        </div>

        <div class="carousel-item">
          <%= image_tag "molby.png", class:"d-block w-100", alt:"Back view of lady wearing beige and black seersucker gingham dress and matching hair bow" %>
          <%= link_to molby_sellers_path do %>
            <div class="carousel-caption">
              <h3>Molby the Label</h3>
              <p>Handmade British slow fashion</p>
            </div>
          <% end %>
        </div>

      </div>

      <a class="carousel-control-prev" href="#carouselExampleControls2" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls2" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </div>

</div>
